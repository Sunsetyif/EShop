<div id="tableContainer">
    <table>
        <thead>
            <tr>
                <td>Product Name</td>
                <td>Category</td>
                <td>Price</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <h1 style="color:red">No match</h1>
            }
            else
            {
                foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>-</td>
                        <td>@product.Price</td>
                        <td>
                            <button>Edit</button>
                            <button>Delete</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

